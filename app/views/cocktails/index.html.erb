<div class="container">
  <h1 id="all_cocktails">All cocktails</h1>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
        <div class="card m-2" style="width: 18rem;">
          <% if cocktail.photo.attached? %>
            <%= cl_image_tag cocktail.photo.key, :class => "card-img-top" %>
          <% else %>
            <img src=<%= "https://source.unsplash.com/1600x900/?cocktail,#{cocktail.name}" %> class="card-img-top" alt="...">
          <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name.capitalize %></h5>
          <%= link_to 'View', cocktail_path(cocktail), class: 'btn btn-card float-right' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

