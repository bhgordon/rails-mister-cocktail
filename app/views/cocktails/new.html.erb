<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Create a new cocktail</h1>
        <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo %>
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to 'Cancel', cocktails_path, class: 'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</div>
